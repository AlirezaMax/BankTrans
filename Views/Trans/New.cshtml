<h2>New Transaction</h2>

@using (Html.BeginForm("Create", "Trans"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Tran.CustomerId)
        @Html.TextBoxFor(m => m.Tran.CustomerId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tran.Amount)
        @Html.TextBoxFor(m => m.Tran.Amount, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tran.StateId)
        @Html.DropDownListFor(m => m.Tran.StateId, new SelectList(Model.States, "Id", "Name"), "Select State", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

